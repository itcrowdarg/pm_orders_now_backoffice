
<%= form_with(
  model: @admin_user,
  data: { controller: 'form'},
    url: @admin_user.new_record? ? admin_users_path : admin_user_path(@admin_user),
  html: {class: 'needs-validation', novalidate: true}
) do |f| %>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="modal-title" class="modal-title"><%= AdminUser.model_name.human %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class="col-md-4">
            <%= f.custom_text_field :last_name, input_options: { autofocus: true, placeholder: true, required: true } %>
          </div>
          <div class="col-md-4">
            <%= f.custom_text_field :first_name, input_options: { placeholder: true, required: true } %>
          </div>
          <div class="col-md-4">
            <%= f.custom_email_field :email, input_options: { autofocus: true, autocomplete: "email", placeholder: true, required: true } %>
          </div>
        </div>

        <% unless @admin_user.persisted? %>
          <div class="row">
            <div class="col-md-6">
              <%= f.custom_password_field :password, input_options: { autofocus: true, autocomplete: "new-password", placeholder: true } %>
            </div>
            <div class="col-md-6">
              <%= f.custom_password_field :password_confirmation, input_options: { autofocus: true, autocomplete: "new-password", placeholder: true } %>
            </div>
          </div>
        <% end %>

      </div>
      <div class="modal-footer">
        <%= submit_button %>
      </div>
    </div>
  </div>
<% end %>

